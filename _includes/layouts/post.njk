---
layout: layouts/base.njk
templateClass: tmpl-post
---

<article>


  <header class="PostHeader">
    <div class="banner" style="background-color: {{ banner_color }}">
      <div>
        <img src="{{ featured_img | safe }}">
      </div>
    </div>
    
    <div class="container-2 mh-auto ph-1">
      <h1 class="">{{ title }}</h1>
    </div>
  </header>

  <div class="container-2 mh-auto ph-1">
    {{ content | safe }}
  </div>

  <footer class="pt-1 pb-1">
    <div class="container-2 mh-auto ph-1">
    <p class=""><time datetime="{{ date | htmlDateString }}">
          {{ date | readableDate }}
        </time>
    </p>
    <p class="mt-0"> Tag(s) : 
      {% for tag in tags %}
          {%- if collections.tagList.indexOf(tag) != -1 -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <span><a href="{{ tagUrl | url }}" class="post-tag">{{ tag }},</a></span>
          {%- endif -%}
       {% endfor %}
    </p>
    </div>
  </footer>
  
</article>

{# Next and Previous Navigation #}
<nav class="PostNav flex justify-between align-center container-2 mh-auto ph-1 pt-1 pb-1">
  {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
  {%- if previousPost %}
    <div><span class="zeta">Sebelumnya</span><br> <a class="italic" href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a></div>
  {% endif %}
  {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
  {%- if nextPost %}
    <div class="epsilon"><span class="zeta">Selanjutnya</span><br> <a class="italic" href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a></div>
  {% endif %}
</nav>
