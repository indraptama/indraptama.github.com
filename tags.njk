---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/home.njk
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag }}/
---
<div class="container-1 mh-auto ph-1">
  <h1 class="gamma">Tagged “{{ tag }}”</h1>
  <hr>
</div>
{% set postslist = collections[ tag ] %}
{% include "postslist.njk" %}

<div class="container-1 mh-auto ph-1">
  <p>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>
</div>